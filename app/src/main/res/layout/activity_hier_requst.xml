<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HierRequst">
    <ScrollView
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="1000.0dip">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/close"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_close_black_24dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/textView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-30dp"
                android:fontFamily="@font/montserrat"
                android:text="Set Up Freelancing Profile"
                android:textColor="#1F0D4D"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="10.0dip"
                android:text="Here, We Are Providing You Platform To To Earn With Your Skill And For That Provide Us Your Details We Will Review Your Profile And Then We Will Approve Your Profile And Will Help You To Earn With Your Skill."
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/m"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/hire_me_png"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />


            </LinearLayout>


            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="30.0dip"
                android:text="Your Good Name"
                android:fontFamily="@font/montserrat" />

            <EditText
                android:textSize="18.0dip"
                android:textColor="@color/black"
                android:textColorHint="#ab2b65a0"
                android:gravity="start"
                android:layout_gravity="center"
                android:id="@+id/con_name"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:fontFamily="@font/montserrat" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="10.0dip"
                android:text="Your Skill"
                android:fontFamily="@font/montserrat" />

            <EditText
                android:textSize="18.0dip"
                android:textColor="@color/black"
                android:textColorHint="#ab2b65a0"
                android:gravity="start"
                android:layout_gravity="center"
                android:id="@+id/con_email"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:fontFamily="@font/montserrat" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="10.0dip"
                android:text="Your Skill Description"
                android:fontFamily="@font/montserrat" />


            <EditText
                android:id="@+id/contact_con"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:textColor="@color/black"
                android:textColorHint="#ab2b65a0"
                android:textSize="18.0dip" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="10.0dip"
                android:text="Charge Per Hour For Your Skill Service"
                android:fontFamily="@font/montserrat" />

            <EditText
                android:textSize="18.0dip"
                android:textColor="@color/black"
                android:textColorHint="#ab2b65a0"
                android:gravity="start"
                android:layout_gravity="center"
                android:id="@+id/col_add"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:maxLines="5"
                android:inputType="textImeMultiLine"
                android:fontFamily="@font/montserrat" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="10.0dip"
                android:text="Add Contact Information"
                android:fontFamily="@font/montserrat" />

            <EditText
                android:textSize="18.0dip"
                android:textColor="@color/black"
                android:textColorHint="#ab2b65a0"
                android:gravity="start"
                android:layout_gravity="center"
                android:id="@+id/pinb_con"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:fontFamily="@font/montserrat" />

            <Button
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/save_con"
                android:background="@drawable/hrader_profile_view"
                android:paddingLeft="20.0dip"
                android:paddingRight="10.0dip"

                android:layout_width="300.0dip"
                android:layout_height="50.0dip"
                android:layout_marginTop="20.0dip"
                android:text="Done"
                android:fontFamily="@font/montserrat" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>